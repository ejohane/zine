{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "build/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "type-check": {},
    "deploy": {
      "dependsOn": ["build"]
    },
    "deploy:production": {
      "dependsOn": ["build"]
    },
    "storybook": {
      "cache": false,
      "persistent": true
    }
  }
}