{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["WORKER_PORT", "METRO_PORT"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "@zine/shared#lint": {
      "outputs": [".eslintcache"]
    },
    "@zine/worker#lint": {
      "outputs": [".eslintcache"]
    },
    "typecheck": {
      "dependsOn": ["^build"]
    }
  }
}
