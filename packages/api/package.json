{
  "name": "@zine/api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "wrangler dev src/index.ts --local --port 8787 --ip 0.0.0.0",
    "deploy": "wrangler deploy --minify src/index.ts",
    "type-check": "tsc --noEmit",
    "build": "tsc",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "bun run db:sync && drizzle-kit studio",
    "db:sync": "cp ./.wrangler/state/v3/d1/miniflare-D1DatabaseObject/*.sqlite ./local.db 2>/dev/null || echo 'Local database synced'",
    "db:studio:production": "DRIZZLE_ENV=production drizzle-kit studio"
  },
  "dependencies": {
    "@clerk/backend": "^2.4.0",
    "@zine/shared": "workspace:*",
    "drizzle-orm": "^0.44.4",
    "drizzle-zod": "^0.5.1",
    "hono": "^4.4.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240605.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.14.0",
    "@vitest/ui": "^3.2.4",
    "better-sqlite3": "^12.2.0",
    "dotenv": "^17.2.1",
    "drizzle-kit": "^0.31.4",
    "typescript": "^5.4.5",
    "vitest": "^3.2.4",
    "wrangler": "^4.32.0"
  }
}
