{
  "name": "@zine/worker",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "exports": {
    "./trpc": {
      "types": "./src/trpc/router.ts"
    }
  },
  "scripts": {
    "build": "echo 'Worker build handled by Wrangler'",
    "dev": "wrangler dev",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:production": "wrangler deploy --env production",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@hono/trpc-server": "^0.3.2",
    "@trpc/server": "^11.0.0",
    "@zine/shared": "workspace:*",
    "drizzle-orm": "^0.38.3",
    "hono": "^4.6.14",
    "jose": "^5.9.6",
    "superjson": "^2.2.2",
    "svix": "^1.44.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.5.33",
    "@cloudflare/workers-types": "^4.20241205.0",
    "@types/node": "^22.10.2",
    "drizzle-kit": "^0.28.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "wrangler": "^3.95.0"
  }
}
