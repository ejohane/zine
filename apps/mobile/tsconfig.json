{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@zine/shared": ["../../packages/shared/src"],
      "@zine/shared/*": ["../../packages/shared/src/*"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "uniwind-types.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".expo",
    "coverage"
  ]
}
