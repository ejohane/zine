{
  "name": "@zine/mobile",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "dev": "dotenv -e .env.development -- expo start",
    "start": "dotenv -e .env.development -- expo start",
    "android": "dotenv -e .env.development -- expo run:android",
    "ios": "dotenv -e .env.development -- expo run:ios",
    "web": "dotenv -e .env.development -- expo start --web",
    "build:ios:development": "dotenv -e .env.development -- eas build --platform ios --profile development --local --output ./build/development.ipa --non-interactive",
    "build:ios:preview": "dotenv -e .env.preview -- eas build --platform ios --profile preview --local --output ./build/preview.ipa --non-interactive",
    "build:ios:production": "dotenv -e .env.production -- eas build --platform ios --profile production --local --output ./build/production.ipa --non-interactive",
    "build:android:development": "dotenv -e .env.development -- eas build --platform android --profile development --local --output ./build/development.apk --non-interactive",
    "build:android:preview": "dotenv -e .env.preview -- eas build --platform android --profile preview --local --output ./build/preview.apk --non-interactive",
    "build:android:production": "dotenv -e .env.production -- eas build --platform android --profile production --local --output ./build/production.aab --non-interactive"
  },
  "dependencies": {
    "@clerk/clerk-expo": "^2.14.30",
    "@expo/vector-icons": "^15.0.2",
    "@tanstack/react-query": "^5.87.4",
    "@zine/design-system": "workspace:*",
    "@zine/shared": "workspace:*",
    "expo": "~54.0.10",
    "expo-clipboard": "^8.0.7",
    "expo-crypto": "^15.0.7",
    "expo-file-system": "~19.0.15",
    "expo-haptics": "^15.0.7",
    "expo-linear-gradient": "^15.0.7",
    "expo-linking": "^8.0.8",
    "expo-router": "~6.0.8",
    "expo-secure-store": "~15.0.7",
    "expo-status-bar": "~3.0.8",
    "heroui-native": "1.0.0-alpha.12",
    "lucide-react-native": "^0.544.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.4",
    "react-native-reanimated": "~4.1.0",
    "react-native-safe-area-context": "5.6.0",
    "react-native-screens": "^4.16.0",
    "react-native-svg": "15.12.1",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^3.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@types/react": "~19.1.10",
    "dotenv-cli": "^10.0.0",
    "nativewind": "^4.0.0",
    "tailwindcss": "^4.1.13",
    "typescript": "~5.9.2"
  },
  "packageManager": "bun@1.0.0",
  "private": true,
  "overrides": {
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "@types/react": "19.1.12"
  },
  "resolutions": {
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "@types/react": "19.1.12"
  }
}
