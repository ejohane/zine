#!/usr/bin/expect -f

set timeout 300
spawn bun run build:ios:preview

# Handle the metro.config.js warning
expect {
    "Would you like to abort?" {
        send "n\r"
        exp_continue
    }
    "Apple ID:" {
        # Handle credentials - will need manual input
        interact
    }
    "Password" {
        # Handle password - will need manual input
        interact
    }
    eof
}

wait